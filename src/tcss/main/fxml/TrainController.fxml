                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <Label id="sSpeedLabel" fx:id="suggestedSpeedLabel" text="Suggested Speed:" />
                  <Label id="sSpeedLabel" fx:id="currentSpeedLabel" text="Current Speed: " />
                  <HBox prefHeight="47.0" prefWidth="376.0">
                     <children>
                        <Label text="Setpoint Speed: " />

                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="confirmSetpoint" mnemonicParsing="false" onAction="#confirmSetpoint" text="OK">
                           <HBox.margin>
                              <Insets left="4.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>

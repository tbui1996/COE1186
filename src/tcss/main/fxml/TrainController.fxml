                        <Insets bottom="25.0" top="100.0" />
                     </VBox.margin>
                  </ToggleButton>
                  <ToggleButton fx:id="opModeToggle" mnemonicParsing="false" onAction="#toggleOpMode" prefHeight="27.0" prefWidth="156.0" text="Manual Mode" />
                  <Label fx:id="powerCommandLabel" text="Power: ">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="kilabel" text="Label" />
                  <Label fx:id="kplabel" text="Label" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="backButton" layoutX="14.0" layoutY="15.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="55.0" prefWidth="70.0" styleClass="exit-button" />
   </children>
